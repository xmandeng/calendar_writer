{
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "git.autofetch": true,
  "jupyter.askForKernelRestart": false,
  "python.languageServer": "Pylance",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "python.envFile": "${workspaceFolder}/.vscode/.env",
  "redhat.telemetry.enabled": false,
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "autoDocstring.docstringFormat": "numpy",
  "autoDocstring.generateDocstringOnEnter": true,
  "autoDocstring.guessTypes": true,
  "autoDocstring.startOnNewLine": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.completeFunctionParens": true,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "python.analysis.autoSearchPaths": false,
  "debug.showBreakpointsInOverviewRuler": true,
  "window.title": "${activeEditorShort}${separator}${rootName}${separator}${profileName}",
  "python.testing.pytestEnabled": true,
  "python.globalModuleInstallation": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["tests"],
  "explorer.confirmDragAndDrop": false,
  "window.zoomLevel": 0,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "workspaceFolder": "${workspaceFolder}",
    "PYTHONPATH": "${workspaceFolder}/src:${PYTHONPATH}:${env:HOME}/.pyenv/versions/3.11.8/envs/school_calendar/lib/python3.11/site-packages"
  },
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/bin/zsh",
      "icon": "terminal-bash",
      "env": {
        "workspaceFolder": "${workspaceFolder}",
        "PYTHONPATH": "${workspaceFolder}/src:${PYTHONPATH}:${env:HOME}/.pyenv/versions/3.11.8/envs/school_calendar/lib/python3.11/site-packages"
      },
      "overrideName": false
    }
  },
  "evenBetterToml.schema.associations": {
    "pyproject.toml": "https://json.schemastore.org/pyproject.json"
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "black-formatter.args": ["--line-length", "120"],
  "isort.args": [
    "--profile=black",
    "--line-length=120",
    "--known-third-party=google,googleapiclient"
  ],
  "flake8.args": ["--max-line-length=120", "--extend-ignore=E203,C0411"],
  "pylint.args": [
    "--max-line-length=120",
    "--disable=C0411, C0301, W0511, W1203, W0602"
  ]
}
